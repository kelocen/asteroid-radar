<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- - - - - - = = = = = = = = = = = = Main Activity Layout = = = = = = = = = = = = - - - - - -->
  <!-- Root Layout -->
  <style name="coordinatorLayoutActivityMain" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Fragment Container -->
  <style name="fragmentContainerActivityMain" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Asteroid Screen = = = = = = = = = = = = - - - - - -->
  <!-- Parent Constraint Layout -->
  <style name="constraintLayoutFragmentAsteroid" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Picture of the day Frame Layout -->
  <style name="frameLayoutAsteroidFragment" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">@dimen/picture_of_day_frame_layout_height</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- Picture of the day label background -->
  <style name="pictureLabelBackgroundViewAsteroidFragment" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/picture_label_background_view_height</item>
    <item name="android:background">@color/picture_of_day_label_background</item>
  </style>
  <!-- Picture of the day Info Button -->
  <style name="pictureInfoImageViewAsteroidFragment" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">@dimen/picture_of_day_info_image_view_height_width</item>
    <item name="android:layout_width">@dimen/picture_of_day_info_image_view_height_width</item>
    <item name="android:layout_marginEnd">@dimen/picture_of_day_info_image_view_margin_end</item>
    <item name="android:layout_marginStart">@dimen/picture_of_day_info_image_view_margin_start
    </item>
    <item name="android:background">?selectableItemBackground</item>
  </style>
  <!-- Asteroid Refresh Layout -->
  <style name="asteroidRefreshLayoutAsteroidFragment" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Asteroid RecyclerView -->
  <style name="asteroidsRecyclerViewAsteroidFragment" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">@dimen/zero_height_width</item>
    <item name="android:layout_height">@dimen/zero_height_width</item>
  </style>
  <!-- Picture of the Day -->
  <style name="pictureOfDayImageViewFragmentAsteroid" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:adjustViewBounds">true</item>
  </style>
  <!-- Progress Bar -->
  <style name="statusProgressBarFragmentAsteroid" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:indeterminate">true</item>
    <item name="android:visibility">gone</item>
  </style>
  <!-- Picture of the Day Label -->
  <style name="pictureOfDayLabelTextViewFragmentAsteroid">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">viewStart</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingBottom">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:paddingTop">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:paddingStart">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:textColor">@color/default_text_color</item>
    <item name="android:text">@string/picture_of_day_label</item>
    <item name="android:textSize">@dimen/picture_of_day_label_text_view_text_size</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Detail Screen = = = = = = = = = = = = - - - - - -->
  <!-- Linear Layout -->
  <style name="linearLayoutFragmentDetail" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Content ScrollView -->
  <style name="scrollviewFragmentDetail" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:paddingTop">@dimen/scroll_view_padding</item>
    <item name="android:paddingStart">@dimen/scroll_view_padding</item>
    <item name="android:paddingEnd">@dimen/scroll_view_padding</item>
  </style>
  <!-- Potentially Hazardous Image -->
  <style name="potentiallyHazardousImageViewFragmentDetail" parent="Theme.AsteroidRadar">
    <item name="android:layout_height">@dimen/picture_of_day_frame_layout_height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:adjustViewBounds">true</item>
  </style>
  <!-- Help Button -->
  <style name="helpButtonImageViewFragmentDetail" parent="Theme.AsteroidRadar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:padding">@dimen/help_button_image_view_padding</item>
    <item name="android:layout_marginEnd">@dimen/help_button_image_view_margin_end</item>
  </style>
  <!-- Detail Fragment Parent Label TextView -->
  <style name="parentLabelTextViewDetailFragment" parent="Theme.AsteroidRadar">
    <item name="android:textColor">@color/default_text_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/parent_label_text_view_text_size</item>
  </style>
  <!-- Detail Fragment Parent TextView -->
  <style name="parentTextViewDetailFragment" parent="Theme.AsteroidRadar">
    <item name="android:textColor">@color/default_text_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/parent_text_view_text_size</item>
  </style>
  <!-- Approach Date Label -->
  <style name="approachDateLabelTextViewFragmentDetail" parent="parentLabelTextViewDetailFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/close_approach_date_label</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Approach Date -->
  <style name="approachDateTextViewFragmentDetail" parent="parentTextViewDetailFragment">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Magnitude Label -->
  <style name="magnitudeLabelTextViewFragmentDetail" parent="parentLabelTextViewDetailFragment">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/label_text_view_margin_top</item>
    <item name="android:text">@string/absolute_magnitude_label</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Magnitude -->
  <style name="magnitudeTextViewFragmentDetail" parent="parentTextViewDetailFragment">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Diameter Label -->
  <style name="diameterLabelTextViewFragmentDetail" parent="parentLabelTextViewDetailFragment">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/label_text_view_margin_top</item>
    <item name="android:text">@string/estimated_diameter_label</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Diameter -->
  <style name="diameterTextViewFragmentDetail" parent="parentTextViewDetailFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Velocity Label -->
  <style name="velocityLabelTextViewFragmentDetail" parent="parentLabelTextViewDetailFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/label_text_view_margin_top</item>
    <item name="android:text">@string/relative_velocity_label</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Velocity -->
  <style name="velocityTextViewFragmentDetail" parent="parentTextViewDetailFragment">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Distance Label -->
  <style name="distanceLabelTextViewFragmentDetail" parent="parentLabelTextViewDetailFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/label_text_view_margin_top</item>
    <item name="android:text">@string/distance_from_earth_label</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Distance -->
  <style name="distanceTextViewFragmentDetail" parent="parentTextViewDetailFragment">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Asteroid List Item Layout = = = = = = = = = = = = - - - - - -->
  <!-- Constraint Layout -->
  <style name="constraintLayoutAsteroidListItem">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:padding">@dimen/padding_constraint_layout_list_item_asteroid</item>
  </style>
  <!-- Asteroid Code Name -->
  <style name="codenameTextViewListItemAsteroid">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/asteroid_code_name_text_size</item>
    <item name="android:text">@string/codename_text_view_default_text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Asteroid Approach Date -->
  <style name="approachDateTextViewListItemAsteroid">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/asteroid_close_approach_date_text_size</item>
    <item name="android:text">@string/approach_date_text_view_default_text</item>
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Asteroid Approach Date -->
  <style name="potentiallyHazardousImageViewListItemAsteroid">
    <item name="android:layout_height">@dimen/potentially_hazardous_image_height_width</item>
    <item name="android:layout_width">@dimen/potentially_hazardous_image_height_width</item>
    <item name="android:src">@drawable/ic_status_potentially_hazardous</item>
    <item name="android:scaleType">fitCenter</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Picture Alert Dialog = = = = = = = = = = = = - - - - - -->
  <!-- Root Linear Layout -->
  <style name="linearLayoutPictureInformationAlert">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:padding">@dimen/picture_alert_linear_layout_padding</item>
    <item name="android:orientation">vertical</item>
  </style>
  <!-- Picture Information Alert Heading -->
  <style name="alertHeadingTextViewPictureInformationAlert">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:text">@string/picture_of_day_heading</item>
    <item name="android:textSize">@dimen/picture_alert_heading_text_size</item>
    <item name="android:layout_marginTop">@dimen/picture_alert_heading_margin_top</item>
  </style>
  <!-- Picture Of The Day Name -->
  <style name="pictureOfDayNameTextViewPictureInformationAlert">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/picture_of_day_day_name</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">@dimen/picture_alert_name_text_size</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginTop">@dimen/picture_alert_name_margin_top</item>
  </style>
</resources>