<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- - - - - - = = = = = = = = = = = = Main Activity Layout = = = = = = = = = = = = - - - - - -->
  <!-- Top level style -->
  <style name="ApplicationStyle" parent="Theme.AsteroidRadar">
    <item name="android:textColor">@color/default_text_color</item>
  </style>
  <!-- Top level layout -->
  <style name="ActivityMain.CoordinatorLayout" parent="ApplicationStyle">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Fragment Container -->
  <style name="ActivityMain.FragmentContainer" parent="ApplicationStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Asteroid Screen = = = = = = = = = = = = - - - - - -->
  <!-- Top-level Style -->
  <style name="ApplicationStyle.AsteroidScreen" parent="ApplicationStyle" />
  <!-- Top-level Layout -->
  <style name="AsteroidScreen.ViewGroup.ConstraintLayout" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Picture Frame Layout -->
  <style name="AsteroidScreen.ViewGroup.FrameLayout" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">@dimen/picture_of_day_frame_layout_height</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- Picture Label Background -->
  <style name="AsteroidScreen.View.LabelBackground" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">@dimen/picture_label_background_view_height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/picture_of_day_label_background</item>
  </style>
  <!-- Picture Information Button -->
  <style name="AsteroidScreen.ImageView.PictureInfo" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/picture_of_day_info_image_view_margin_end</item>
    <item name="android:layout_marginStart">@dimen/picture_of_day_info_image_view_margin_start
    </item>
    <item name="android:padding">@dimen/info_button_image_view_padding</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>
  <!-- Asteroid Refresh Layout -->
  <style name="AsteroidScreen.ViewGroup.RefreshLayout" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Asteroid RecyclerView -->
  <style name="AsteroidScreen.ViewGroup.RecyclerView" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_width">@dimen/zero_height_width</item>
    <item name="android:layout_height">@dimen/zero_height_width</item>
  </style>
  <!-- Picture of the Day -->
  <style name="AsteroidScreen.ImageView.PictureOfDay" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:adjustViewBounds">true</item>
  </style>
  <!-- Progress Bar -->
  <style name="AsteroidScreen.ProgressBar.LoadingStatus" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:indeterminate">true</item>
    <item name="android:visibility">gone</item>
  </style>
  <!-- Api Status -->
  <style name="AsteroidScreen.TextView.ApiStatus" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:visibility">gone</item>
  </style>
  <!-- Picture of the Day Label -->
  <style name="AsteroidScreen.TextView.PictureOfDayLabel" parent="ApplicationStyle.AsteroidScreen">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">viewStart</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingBottom">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:paddingTop">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:paddingStart">@dimen/picture_of_day_label_text_view_padding</item>
    <item name="android:text">@string/picture_of_day_label</item>
    <item name="android:textSize">@dimen/picture_of_day_label_text_view_text_size</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Detail Screen = = = = = = = = = = = = - - - - - -->
  <!-- Top-level Style -->
  <style name="ApplicationStyle.DetailScreen" parent="ApplicationStyle" />
  <!-- Top-level Layout -->
  <style name="DetailScreen.ViewGroup.LinearLayout" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:background">@color/app_background</item>
  </style>
  <!-- Content ScrollView -->
  <style name="DetailScreen.ViewGroup.ScrollView" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:paddingTop">@dimen/scroll_view_padding</item>
    <item name="android:paddingStart">@dimen/scroll_view_padding</item>
    <item name="android:paddingEnd">@dimen/scroll_view_padding</item>
  </style>
  <!-- Content/Detail Layout -->
  <style name="DetailScreen.ViewGroup.ConstraintLayout" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Potentially Hazardous Image -->
  <style name="DetailScreen.ImageView.PotentiallyHazardous" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_height">@dimen/picture_of_day_frame_layout_height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:adjustViewBounds">true</item>
  </style>
  <!-- Help Button -->
  <style name="DetailScreen.ImageView.HelpButton" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:padding">@dimen/help_button_image_view_padding</item>
  </style>
  <!-- Parent Label TextView -->
  <style name="DetailScreen.TextView.DetailLabel" parent="ApplicationStyle.DetailScreen">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/label_text_view_margin_top</item>
    <item name="android:textSize">@dimen/parent_label_text_view_text_size</item>
  </style>
  <!-- Parent Property TextView -->
  <style name="DetailScreen.TextView.DetailProperty" parent="ApplicationStyle.DetailScreen">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:layout_marginTop">@dimen/data_text_view_margin_top</item>
    <item name="android:textSize">@dimen/parent_text_view_text_size</item>
  </style>
  <!-- Approach Date Label -->
  <style name="DetailLabel.ApproachDate" parent="DetailScreen.TextView.DetailLabel">
    <item name="android:text">@string/close_approach_date_label</item>
  </style>
  <!-- Approach Date -->
  <style name="DetailProperty.ApproachDate" parent="DetailScreen.TextView.DetailProperty" />
  <!-- Magnitude label -->
  <style name="DetailLabel.AbsoluteMagnitude" parent="DetailScreen.TextView.DetailLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:text">@string/absolute_magnitude_label</item>
  </style>
  <!-- Magnitude -->
  <style name="DetailProperty.AbsoluteMagnitude" parent="DetailScreen.TextView.DetailProperty">
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- Diameter label -->
  <style name="DetailLabel.EstimatedDiameter" parent="DetailScreen.TextView.DetailLabel">
    <item name="android:text">@string/estimated_diameter_label</item>
  </style>
  <!-- Diameter -->
  <style name="DetailProperty.EstimatedDiameter" parent="DetailScreen.TextView.DetailProperty" />
  <!-- Velocity label -->
  <style name="DetailLabel.RelativeVelocity" parent="DetailScreen.TextView.DetailLabel">
    <item name="android:text">@string/relative_velocity_label</item>
  </style>
  <!-- Velocity -->
  <style name="DetailProperty.RelativeVelocity" parent="DetailScreen.TextView.DetailProperty" />
  <!-- Distance label -->
  <style name="DetailLabel.DistanceFromEarth" parent="DetailScreen.TextView.DetailLabel">
    <item name="android:text">@string/distance_from_earth_label</item>
  </style>
  <!-- Distance -->
  <style name="DetailProperty.DistanceFromEarth" parent="DetailScreen.TextView.DetailProperty" />
  <!-- - - - - - = = = = = = = = = = = = Asteroid List Item Layout = = = = = = = = = = = = - - - - - -->
  <!-- Top-level Style -->
  <style name="ApplicationStyle.AsteroidListItem" parent="ApplicationStyle" />
  <!-- Top-level Layout -->
  <style name="AsteroidListItem.ConstraintLayout" parent="ApplicationStyle.AsteroidListItem">
    <item name="android:padding">@dimen/padding_constraint_layout_list_item_asteroid</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Parent TextView -->
  <style name="AsteroidListItem.TextView.ListItemProperty" parent="ApplicationStyle.AsteroidListItem">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Asteroid Code Name -->
  <style name="ListItemProperty.Codename" parent="AsteroidListItem.TextView.ListItemProperty">
    <item name="android:textSize">@dimen/asteroid_code_name_text_size</item>
  </style>
  <!-- Asteroid Approach Date -->
  <style name="ListItemProperty.ApproachDate" parent="AsteroidListItem.TextView.ListItemProperty">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/asteroid_close_approach_date_text_size</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>
  <!-- Asteroid Hazard Indicator -->
  <style name="AsteroidListItem.ImageView.ListItemProperty" parent="ApplicationStyle.AsteroidListItem">
    <item name="android:layout_height">@dimen/potentially_hazardous_image_height_width</item>
    <item name="android:layout_width">@dimen/potentially_hazardous_image_height_width</item>
    <item name="android:src">@drawable/ic_status_potentially_hazardous</item>
    <item name="android:scaleType">fitCenter</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Picture Alert Dialog = = = = = = = = = = = = - - - - - -->
  <!-- Top-level Style -->
  <style name="PictureAlertDialog" parent="Theme.AppCompat.DayNight.DarkActionBar" />
  <!-- Top-level Layout -->
  <style name="PictureAlertDialog.ViewGroup.LinearLayout" parent="PictureAlertDialog">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:padding">@dimen/picture_alert_linear_layout_padding</item>
    <item name="android:orientation">vertical</item>
  </style>
  <!-- Parent TextView -->
  <style name="PictureAlertDialog.TextView.AlertText" parent="PictureAlertDialog">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_gravity">center_horizontal</item>
  </style>
  <!-- Picture Alert Heading -->
  <style name="AlertText.Heading" parent="PictureAlertDialog.TextView.AlertText">
    <item name="android:textStyle">bold</item>
    <item name="android:text">@string/picture_of_day_heading</item>
    <item name="android:textSize">@dimen/picture_alert_heading_text_size</item>
    <item name="android:layout_marginTop">@dimen/picture_alert_heading_margin_top</item>
  </style>
  <!-- Picture Alert Image Name -->
  <style name="AlertText.PictureOfDayName" parent="PictureAlertDialog.TextView.AlertText">
    <item name="android:text">@string/picture_of_day_day_name</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">@dimen/picture_alert_name_text_size</item>
    <item name="android:layout_marginTop">@dimen/picture_alert_name_margin_top</item>
  </style>
</resources>