<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <!-- Parent Constraint Layout -->
  <androidx.constraintlayout.widget.ConstraintLayout style="@style/constraintLayoutFragmentAsteroid">
    <!-- Image of the Day Frame Layout -->
    <FrameLayout
      android:id="@+id/image_of_the_day_layout"
      style="@style/frameLayoutAsteroidFragment"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <!-- Image of the Day -->
      <ImageView
        android:id="@+id/image_image_of_the_day"
        style="@style/imageOfDayImageViewFragmentAsteroid"
        android:contentDescription="@string/nasa_picture_of_day_content_description_format"
        app:srcCompat="@drawable/placeholder_picture_of_day" />

      <!-- Image of the Day Label -->
      <TextView
        android:id="@+id/textView"
        style="@style/imageOfDayLabelTextViewFragmentAsteroid" />
    </FrameLayout>

    <!-- Progress Bar -->
    <ProgressBar
      android:id="@+id/status_loading_wheel"
      style="@style/statusProgressBarFragmentAsteroid"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <!-- Asteroid RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/asteroid_recycler"
      style="@style/asteroidsRecyclerViewAsteroidFragment"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_of_the_day_layout"
      app:layout_constraintVertical_bias="0.0" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <data>
    <variable
      name="asteroidViewModel"
      type="dev.kelocen.asteroidradar.ui.asteroid.AsteroidViewModel" />
  </data>
</layout>
